@model App.ViewModels.LoginPilot
@{
    ViewData["Title"] = "LoginPilot";
}

<h1>Login</h1>

<form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PilotEmail" class="control-label"></label>
                <input asp-for="PilotEmail" class="form-control" />
                <span asp-validation-for="PilotEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="PPassword" class="control-label"></label>
                <input  asp-for="PPassword" class="form-control" />
                <span asp-validation-for="PPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
        </form>